{
  "$id": "delta_sharing.credentials.v1.CreateCredentialRequest.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Create a new credential",
  "patternProperties": {
    "^(azureManagedIdentity)$": {
      "$ref": "delta_sharing.credentials.v1.AzureManagedIdentity.schema.json"
    },
    "^(azureServicePrincipal)$": {
      "$ref": "delta_sharing.credentials.v1.AzureServicePrincipal.schema.json"
    },
    "^(azureStorageKey)$": {
      "$ref": "delta_sharing.credentials.v1.AzureStorageKey.schema.json"
    },
    "^(readOnly)$": {
      "description": "Whether the credential is usable only for read operations. Only applicable when purpose is STORAGE.",
      "type": "boolean"
    },
    "^(skipValidation)$": {
      "description": "Supplying true to this argument skips validation of the created set of credentials.",
      "type": "boolean"
    }
  },
  "properties": {
    "azure_managed_identity": {
      "$ref": "delta_sharing.credentials.v1.AzureManagedIdentity.schema.json"
    },
    "azure_service_principal": {
      "$ref": "delta_sharing.credentials.v1.AzureServicePrincipal.schema.json"
    },
    "azure_storage_key": {
      "$ref": "delta_sharing.credentials.v1.AzureStorageKey.schema.json"
    },
    "comment": {
      "description": "Comment associated with the credential.",
      "type": "string"
    },
    "name": {
      "description": "The credential name. The name must be unique among storage and service credentials within the metastore.",
      "minLength": 3,
      "pattern": "^[a-z][0-9a-z_]*[0-9a-z]$",
      "type": "string"
    },
    "purpose": {
      "anyOf": [
        {
          "enum": [
            "PURPOSE_UNSPECIFIED",
            "STORAGE",
            "SERVICE"
          ],
          "title": "Purpose",
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "description": "The credential purpose."
    },
    "read_only": {
      "description": "Whether the credential is usable only for read operations. Only applicable when purpose is STORAGE.",
      "type": "boolean"
    },
    "skip_validation": {
      "description": "Supplying true to this argument skips validation of the created set of credentials.",
      "type": "boolean"
    }
  },
  "title": "Create Credential Request",
  "type": "object"
}
